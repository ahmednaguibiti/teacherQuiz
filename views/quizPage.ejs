                <div class="row">
                    <p>Q(<%= index+1 %>): <%= question.main %></p>
                </div>
            </div>
    
            <div>
                <div class="row">
                    <p>The Answer: <%= question.correctAnswer %></p>
                </div>
            </div>
    
